<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmDefineActivity" >

    <TextView
        android:id="@+id/activity_alarm_define_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/label"
        android:textSize="32sp" />

    <Switch
        android:id="@+id/activity_alarm_define_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_alarm_define_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/activity_alarm_define_colon"
        style="@style/AlarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/time_separator" />

    <LinearLayout
        android:id="@+id/activity_alarm_define_repetition_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/activity_alarm_define_sunday_toggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textOff="@string/sunday"
            android:textOn="@string/sunday" />

        <ToggleButton
            android:id="@+id/activity_alarm_define_monday_toggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textOff="@string/monday"
            android:textOn="@string/monday" />

        <ToggleButton
            android:id="@+id/activity_alarm_define_tuesday_toggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textOff="@string/tuesday"
            android:textOn="@string/tuesday" />

        <ToggleButton
            android:id="@+id/activity_alarm_define_wednesday_toggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textOff="@string/wednesday"
            android:textOn="@string/wednesday" />

        <ToggleButton
            android:id="@+id/activity_alarm_define_thursday_toggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textOff="@string/thursday"
            android:textOn="@string/thursday" />

        <ToggleButton
            android:id="@+id/activity_alarm_define_friday_toggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textOff="@string/friday"
            android:textOn="@string/friday" />

        <ToggleButton
            android:id="@+id/activity_alarm_define_saturday_toggle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textOff="@string/saturday"
            android:textOn="@string/saturday" />
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_alarm_define_left_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_alarm_define_repetition_layout"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/activity_alarm_define_label"
        android:layout_toLeftOf="@id/activity_alarm_define_colon"
        android:scaleType="fitStart"
        android:src="@drawable/circle_left" />

    <ImageView
        android:id="@+id/activity_alarm_define_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_alarm_define_repetition_layout"
        android:layout_alignParentRight="true"
        android:layout_below="@id/activity_alarm_define_label"
        android:layout_toRightOf="@id/activity_alarm_define_colon"
        android:scaleType="fitEnd"
        android:src="@drawable/circle_right" />

    <TextView
        android:id="@+id/activity_alarm_define_ringtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_alarm_define_repetition_layout"
        android:layout_centerHorizontal="true"
        android:text="@string/silent" />

    <CheckedTextView
        android:id="@+id/activity_alarm_define_vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_alarm_define_ringtone"
        android:layout_centerHorizontal="true"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:text="@string/vibrate" />

    <TextView
        android:id="@+id/activity_alarm_define_hour"
        style="@style/AlarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/number_on_circle_parent_margin"
        android:text="08" />
    
    <TextView
        android:id="@+id/activity_alarm_define_hour_before"
        style="@style/AlarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@id/activity_alarm_define_hour"
     	android:layout_marginBottom="@dimen/number_on_circle_inter_margin"
     	android:alpha="0.5"
        android:text="07" />
    
    <TextView
        android:id="@+id/activity_alarm_define_hour_after"
        style="@style/AlarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/activity_alarm_define_hour"
     	android:layout_marginTop="@dimen/number_on_circle_inter_margin"
     	android:alpha="0.5"
        android:text="09" />

    <TextView
        android:id="@+id/activity_alarm_define_minute"
        style="@style/AlarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/number_on_circle_parent_margin"
        android:text="00" />
    
    <TextView
        android:id="@+id/activity_alarm_define_minute_before"
        style="@style/AlarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/activity_alarm_define_minute"
     	android:layout_marginBottom="@dimen/number_on_circle_inter_margin"
     	android:alpha="0.5"
        android:text="59" />
    
    <TextView
        android:id="@+id/activity_alarm_define_minute_after"
        style="@style/AlarmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/activity_alarm_define_minute"
     	android:layout_marginTop="@dimen/number_on_circle_inter_margin"
     	android:alpha="0.5"
        android:text="01" />

</RelativeLayout>